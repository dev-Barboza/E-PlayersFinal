@model Equipe
@{
    ViewData["Title"] = "Equipes";
}


<form method="POST" action='@Url.Action("Cadastrar")' method="post" enctype="multipart/form-data">
    <label>ID</label>
    <input type="text" name="IdEquipe" />

    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>Imagem</label>
    <input type="file" name="Imagem" />

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-responsive table -striped">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Equipes)
        {
            <tr>
                <td>@item.IdEquipe</td>
                <td>@item.Nome</td>
                <td>
                    <img src="img/Equipes/@item.Imagem" alt="Logo equipe @item.Nome" >
                </td>
                <td>
                    <a asp-area = "" asp-controller = "Equipe" asp-action= "Excluir" asp-route-id = "@item.IdEquipe">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
