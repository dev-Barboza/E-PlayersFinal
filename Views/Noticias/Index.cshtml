@model Noticias
@{
    ViewData["Title"] = "Noticias";
}

<form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">
    
    <label for="IdNoticia">ID</label>
    <input type="text" name="IdNoticia" id="IdNoticia">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">

    <label for="Titulo">Titulo</label>
    <input type="text" name="Titulo" id="Titulo">

    <label for="Texto">Texto</label>
    <input type="text" name="Texto" id="Texto">

    
    
    
    

    

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>ID</th>
        
        <th>Imagem</th>
        <th>Titulo</th>
        <th>Texto</th>
       
    </thead>
    <tbody>
        @foreach (var item in ViewBag.noticiaBag)
        {
            <tr>
                <td>@item.IdNoticia</td>
                <td>
                    <img src="img/Noticias/@item.Imagem" alt="imagem  @item.Titulo" >
                </td>
                <td>@item.Titulo</td>
                <td>@item.Texto</td>
                
                <td>
                    <a asp-area = "" asp-controller = "Noticias" asp-action= "Excluir" asp-route-id = "@item.IdNoticia">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

